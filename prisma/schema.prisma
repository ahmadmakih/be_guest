generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Device {
  id          String   @id @default(uuid())
  name        String
  brand       String
  state       DeviceState
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

enum DeviceState {
  available
  in_use @map("in-use")
  inactive
}
